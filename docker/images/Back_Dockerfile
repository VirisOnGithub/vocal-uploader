FROM debian:latest

RUN apt update && apt install -y g++ git 7zip make cmake libmysqlcppconn-dev

RUN git clone --recursive https://github.com/xmake-io/xmake.git \
&& cd ./xmake \
&& ./configure \
&& make \
&& make install

ENV XMAKE_ROOT=y

WORKDIR /app

COPY back /app

RUN rm -rf .xmake build

RUN xmake -y

ENTRYPOINT xmake run
